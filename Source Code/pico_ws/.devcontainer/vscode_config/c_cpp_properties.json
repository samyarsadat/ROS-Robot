{
    "configurations": [
        {
            "name": "Pico",
            "intelliSenseMode": "linux-gcc-arm",
            "compilerPath": "/usr/bin/arm-none-eabi-gcc",
            "cStandard": "gnu11",
            "cppStandard": "gnu++17",
            
            "browse": {
                "databaseFilename": "${default}",
                "limitSymbolsToIncludedHeaders": false
            },

            "includePath": [
                "/opt/ros/humble/include/**",
                "/usr/include/**",
                "${PICO_SDK_PATH}/**",
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/libmicroros/firmware/build/**"
            ]
        }
    ],

    "version": 4
}