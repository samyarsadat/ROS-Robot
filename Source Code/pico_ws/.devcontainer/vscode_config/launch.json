{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath" : "gdb-multiarch",
            "device": "RP2040",
            "searchDir": ["/pico/openocd/tcl"],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "Restart",
            "showDevDebugOutput": "raw",
            "openOCDLaunchCommands": ["adapter speed 5000"],
            
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 8
            },

            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],

            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}