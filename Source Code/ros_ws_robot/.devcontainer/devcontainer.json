{
    "name": "ROS 2 Workspace (Robot)",
    "remoteUser": "nonroot",
    "overrideCommand": true,
    "postCreateCommand": "/devcon_post_create.sh",
    "postStartCommand": "/devcon_post_start.sh",
    
    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-iot.vscode-ros",
                "smilerobotics.urdf",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "timonwong.shellcheck",
                "yzhang.markdown-all-in-one",
                "zainchen.json"
            ]
        }
    },

    "workspaceFolder": "/home/nonroot/ros_ws",
    "mounts": [{"source": "${localWorkspaceFolder}/../pico_ws/libmicroros/src/rrp_pico_coms",
                "target": "/home/nonroot/ros_ws/src/rrp_pico_coms", "type": "bind"}],

    "runArgs": ["--net=host",
                "--cap-add=SYS_PTRACE",
                "--security-opt", "seccomp=unconfined",
                "--gpus", "all",
                "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
                "--env=DISPLAY",
                "-v", "/dev:/dev",
                "--device-cgroup-rule=c *:* rmw"]
}